@model WebSurveyApp.Survey;

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/site.css" rel="stylesheet"/>
    <title>All Question</title>
</head>
<body>
    <div class="container">
        <h2>@Model.Title</h2>

        <form asp-controller="TakeSurvey" asp-action="Finish" method="post">

            <input type="hidden" name="report.SurveyId" value="@Model.Id" />
            @{
                var questions = Model.Questions;

                @for (int i = 0; i < questions.Count; i++)
                {
                    <h4>@questions[i].Text</h4>

                    <input type="hidden" name="report.Responses[@i].QuestionId" value="@questions[i].Id" />

                    var options = questions[i].Options;

                    <ul>
                        @for (int j = 0; j < options.Count; j++)
                        {
                            <li>
                                <input type="radio" name="report.Responses[@i].OptionId" value="@options[j].Id" />@options[j].Text
                            </li>
                        }
                    </ul>
                }
            }
            <p>
                <input type="submit" value="Send" />
            </p>
        </form>
    </div>
</body>
</html>