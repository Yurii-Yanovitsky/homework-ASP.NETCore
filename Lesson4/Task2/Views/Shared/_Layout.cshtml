@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-dark">
    <div class="row no-gutter navbar-light bg-primary">
        <div class="col-xl-1">
            <label class="pl-3 pt-3 navbar-brand">Web App</label>
        </div>
        <div class="col-xl-11">
            <nav class="navbar navbar-expand-lg">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Main">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Page1">Page 1</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Page2">Page 2</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
    @if (IsSectionDefined("menu"))
    {
        @RenderSection("menu");
    }
    else
    {
        <div class="m-2 text-white">
            @RenderBody()
        </div>
    }
    <script src="~/js/bootstrap.min.js"></script>
</body>
</html>